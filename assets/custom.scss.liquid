// carousel

  /* external css: flickity.css */

  * { box-sizing: border-box; }

  body { font-family: sans-serif; }

  .carousel {
    background: #FAFAFA;
    margin-bottom: 40px;
    width: 400px;
    height:603px;
  }

  .carousel-cell {
    width: 400px;
    height: 600px;
    margin-right: 10px;
    background: #8C8;
    border-radius: 5px;
  }

  /* cell number */
  .carousel-cell:before {
    display: block;
    text-align: center;
    content: counter(carousel-cell);
    line-height: 200px;
    font-size: 80px;
    color: white;
  }

  .carousel-nav {
    width:300px;
    height: 80px !important;
  }

  .carousel-nav .carousel-cell {
    height: 80px;
    width: 100px;
  }

  .carousel-nav .carousel-cell:before {
    font-size: 50px;
    line-height: 80px;
  }

  .carousel-nav .carousel-cell.is-nav-selected {
    background: #ED2;
  }

