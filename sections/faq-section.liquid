{% comment %} FAQ section {% endcomment %}

{% assign heading = section.settings.title %}
{% assign subheading = section.settings.subheading %}
{% assign text = section.settings.text %}

{% unless heading == blank and subheading == blank and text == blank and section.blocks.size == 0 %}
<div data-section-id="{{ section.id }}" data-section-type="faq-section">
  {% include 'faq' %}
</div>
{% endunless %}

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Questions and Answers"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "FAQ"
    }
  ],
  "blocks": [
    {
      "name": "Item",
      "type": "item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question",
          "default": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Vero nihil at impedit nam commodi magni quas fuga, porro asperiores repellendus, doloribus voluptate labore eligendi. Aliquid cupiditate, quaerat magnam et, mollitia iusto, voluptas error quos nemo sunt neque iure corporis dolor.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "FAQ",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}